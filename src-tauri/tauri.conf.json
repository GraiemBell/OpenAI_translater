{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev-tauri-renderer",
    "devPath": "http://localhost:3333",
    "distDir": "../dist/tauri",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "OpenAI Translator",
    "version": "0.1.0"
  },
  "plugins": {
    "http": {
      "all": true,
      "request": true,
      "scope": ["https://*", "http://*"]
    },
    "fs": {
      "scope": [
        "**",
        "$CONFIG/*/**"
      ]
    },
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/yetone/openai-translator/releases/latest/download/latest.json"
      ]
    }
  },
  "tauri": {
    "bundle": {
      "active": true,
      "appimage": {
        "bundleMediaFramework": true
      },
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": [
          "xdotool"
        ]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "xyz.yetone.apps.openai-translator",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/*"
      ],
      "shortDescription": "",
      "targets": "all",
      "updater": {
        "active": true,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM3MzdGN0RCQjhGMkVENDEKUldSQjdmSzQyL2MzTjFaY0dIKzQzVnJYSjFwMlhFZmhjWmU5emZoVUt2OWExcVorbDRkK0NBaDMK"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconAsTemplate": true,
      "iconPath": "icons/favicon.ico"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "hiddenTitle": true,
        "minHeight": 600,
        "minWidth": 540,
        "resizable": true,
        "title": "OpenAI Translator",
        "titleBarStyle": "Overlay",
        "url": "src/tauri/index.html",
        "visible": true,
        "width": 620
      }
    ]
  }
}
