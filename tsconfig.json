    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "es2018",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true
    }
}